@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container text-center">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h2 class="card-title">Hoş Geldiniz!</h2>
                </div>
                <div class="card-body">
                    <p class="lead">Bu site üzerinden borç alma ve ödeme işlemlerinizi kolayca takip edebilirsiniz.</p>
                    
                    @if (User.Identity.IsAuthenticated)
                    {
                        <p class="fs-5">Hoş geldiniz, <strong>@User.Identity.Name</strong>!</p>
                        <a href="/User/Logout" class="btn btn-danger mt-3">Çıkış Yap</a>
                    }
                    else
                    {
                        <p class="fs-5">Hesabınız yok mu? Hemen kayıt olun veya giriş yapın.</p>
                        <a asp-controller="User" asp-action="Login" class="btn btn-primary mt-3 me-3">Login</a>
                        <a asp-controller="User" asp-action="Register" class="btn btn-success mt-3">Register</a>
                    }
                </div>
                <div class="card-footer text-muted">
                    <p>© 2025 Borç Takip Uygulaması</p>
                </div>
            </div>
        </div>
    </div>
</div>
